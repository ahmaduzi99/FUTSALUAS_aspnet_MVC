@{
	Layout = "_Nolayout";
}

@model List<booking>


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="~/css/stylee.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="/dashboard/index">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/admin/index">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Admin</span>
				</a>
			</li>
			<li>
				<a href=/users/index>
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">Jadwal</span>
				</a>
			</li>
			<li>
				<a href="/lapangan/index">
					<i class='bx bxs-message-dots'></i>
					<span class="text">Lapangan</span>
				</a>
			</li>
			<li>
				<a href="/booking/index">
					<i class='bx bxs-group'></i>
					<span class="text">Booking </span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog'></i>
					<span class="text">ABOUT</span>
				</a>
			</li>
			<li>
				<a href="/home/index" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu'></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Booking CRUD</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right'></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="/admin/lapanganview" class="btn btn-primary">
					<i class='bx bxs-cloud-download'></i>
					<span class="text">Tambah</span>
				</a>

			</div>

			<ul class="box-info">
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>List Booking</h3>
						<i class='bx bx-search'></i>
						<i class='bx bx-filter'></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>User</th>
								<th>Nama Lapang</th>
								<th>Tanggal Booking</th>
								<th>Jam Booking</th>
								<th>Jam BErakhir</th>
								<th>Status</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var booking in Model)
							{
								<tr>
									<td>

										<p>@booking.nama</p>
									</td>
									<td>@booking.Lapangan.NamaLapang</td>
									<td>@booking.date</td>
									<td>@booking.start</td>
									<td>@booking.end</td>
									<td>@booking.Status.Stat</td>
									  <td>
                                        <a href="#" class="btn btn-success">Detail</a>
                                        <a href="/booking/edit/@booking.Id" class="btn btn-warning">Edit</a>
										<a href="/lapangan/delete/@booking.Id" class="btn btn-danger">Delete</a>
                                    </td>

								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->


	<script src="~/js/script.js"></script>
</body>
</html>